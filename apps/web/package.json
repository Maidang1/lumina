{
  "name": "@lumina/web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "rsbuild dev",
    "check:devvars": "node -e \"const fs=require('fs');if(!fs.existsSync('.dev.vars')){console.error('Missing apps/web/.dev.vars. Copy apps/web/.dev.vars.example and fill GITHUB_TOKEN.');process.exit(1)}\"",
    "dev:pages": "pnpm run check:devvars && wrangler pages dev dist",
    "dev:full": "pnpm run check:devvars && concurrently \"rsbuild build --watch\" \"sleep 5 && wrangler pages dev dist\"",
    "build": "rsbuild build",
    "preview": "rsbuild preview",
    "deploy": "wrangler pages deploy dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ffmpeg/core": "0.12.10",
    "@ffmpeg/ffmpeg": "0.12.15",
    "@ffmpeg/util": "0.12.2",
    "@lumina/contracts": "workspace:*",
    "@lumina/upload-core": "workspace:*",
    "@react-spring/web": "^10.0.3",
    "@rsbuild/core": "^1.7.3",
    "@rsbuild/plugin-react": "^1.4.5",
    "blockhash": "^0.2.0",
    "click-to-react-component": "^1.1.2",
    "exifr": "^7.1.3",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "wrangler": "^4.0.0"
  }
}
