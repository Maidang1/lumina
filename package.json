{
  "name": "lumina-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @lumina/web dev",
    "dev:full": "pnpm --filter @lumina/web dev:full",
    "dev:pages": "pnpm --filter @lumina/web dev:pages",
    "cli:dev": "pnpm --filter @lumina/cli dev",
    "cli:build": "pnpm --filter @lumina/cli build"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "typescript": "~5.8.2"
  }
}
